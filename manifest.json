{
  "manifest_version": 3,
  "name": "CryptMail",
  "version": "1.0.0",
  "description": "Multi-layer AES-GCM encryption for Gmail. Exchange keys with contacts and send encrypted emails.",
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["https://mail.google.com/*"],
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["src/crypto.js", "src/keystore.js", "src/content.js"],
      "css": ["src/content.css"]
    }
  ],
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
