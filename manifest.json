{
  "manifest_version": 3,
  "name": "CryptMail",
  "version": "3.0.0",
  "description": "AES-256-GCM end-to-end encryption for Gmail with biometric unlock, automatic key exchange, ECDH, stealth mode, and file encryption.",
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["https://mail.google.com/*"],
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["src/crypto.js", "src/keystore.js", "src/content.js"],
      "css": ["src/content.css"]
    }
  ],
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
